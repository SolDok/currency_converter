<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".change_quantity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">

        <EditText
            style="@style/ListItemStyle"
            android:id="@+id/quantityValutaInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/quantityValutaName"
            android:layout_centerHorizontal="true"
            android:text="1"
            android:inputType="number"
            tools:ignore="NotSibling"></EditText>
        <TextView
            style="@style/ListItemStyle"
            android:id="@+id/quantityValutaName"
            android:layout_width="wrap_content"
            android:maxWidth="320dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Name"
            android:gravity="center"
            android:paddingLeft="2dp"> </TextView>

        <TextView
            style="@style/ListItemStyle"
            android:id="@+id/quantityValutaOutput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/quantityValutaName"
            android:text="resultOutput"
            android:paddingLeft="2dp"></TextView>

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>